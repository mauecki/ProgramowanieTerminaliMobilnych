<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity">

    <ImageView
        android:id="@+id/imageSports"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_sports"
        app:layout_constraintStart_toStartOf="@+id/imageCareers"
        app:layout_constraintTop_toBottomOf="@+id/imageCareers"
        app:srcCompat="@drawable/sport" />

    <TextView
        android:id="@+id/tv_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Sports"
        app:layout_constraintBottom_toBottomOf="@+id/imageSports"
        app:layout_constraintEnd_toStartOf="@+id/b_sports"
        app:layout_constraintTop_toTopOf="@+id/imageSports"
        app:layout_constraintVertical_bias="0.692" />

    <ImageButton
        android:id="@+id/b_sports"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sports"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/b_careers"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_careers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_careers"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/imageCities"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAnimals"
        app:srcCompat="@drawable/city" />

    <ImageButton
        android:id="@+id/b_animals"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_animals"
        app:layout_constraintStart_toEndOf="@+id/tv_animals"
        app:layout_constraintTop_toTopOf="@+id/tv_animals"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/b_cities"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cities"
        app:layout_constraintStart_toEndOf="@+id/tv_cities"
        app:layout_constraintTop_toTopOf="@+id/tv_cities"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/tv_animals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Animals"
        app:layout_constraintBottom_toBottomOf="@+id/imageAnimals"
        app:layout_constraintStart_toEndOf="@+id/imageAnimals"
        app:layout_constraintTop_toTopOf="@+id/imageAnimals" />

    <TextView
        android:id="@+id/tv_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Cities"
        app:layout_constraintBottom_toBottomOf="@+id/imageCities"
        app:layout_constraintStart_toEndOf="@+id/imageCities"
        app:layout_constraintTop_toTopOf="@+id/imageCities" />

    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checkedButton="@id/radio_medium"
        android:orientation='horizontal'
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy" />

        <RadioButton
            android:id="@+id/radio_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/radio_hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium (30 seconds, 2 skips)"
        app:layout_constraintBottom_toTopOf="@+id/optionsGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageAnimals"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog" />

    <ImageView
        android:id="@+id/imageCareers"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_careers"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/careers" />

    <TextView
        android:id="@+id/tv_careers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Careers"
        app:layout_constraintBottom_toBottomOf="@+id/imageCareers"
        app:layout_constraintEnd_toStartOf="@+id/b_careers"
        app:layout_constraintTop_toTopOf="@+id/imageCareers" />

    <TextView
        android:id="@+id/tvPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player: "
        app:layout_constraintBottom_toTopOf="@+id/tv_difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>